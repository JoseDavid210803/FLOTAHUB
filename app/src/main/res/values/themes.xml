<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Ejemplo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/my_primary</item>
        <item name="colorPrimaryVariant">@color/my_primary</item>

        <item name="colorSecondary">@color/my_secundary</item>
        <item name="colorSecondaryVariant">@color/my_secundary</item>

        <item name="android:statusBarColor">@android:color/transparent</item>

    </style>

    <style name="Theme.Ejemplo" parent="Base.Theme.Ejemplo" />

    <style name="Theme.Ejemplo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Ejemplo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Ejemplo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>